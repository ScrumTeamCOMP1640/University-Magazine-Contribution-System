@{
    ViewData["Title"] = "Faculty";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model X.PagedList.IPagedList<COMP1640.Models.Faculty>

<div class="section__body">
    <h1>Faculties</h1>
    <div class="main-content">
        <a asp-area="Admin" asp-controller="Faculty" asp-action="Add" class="btn primary">
            <i class="fa-solid fa-plus"></i>
            Faculty
        </a>
        <table class="content-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Faculty name</th>
                    <th>Coordinator</th>
                    <th>Guest account</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var faculty in Model)
                {
                    <tr>
                        <td data-title="ID">@faculty.FacultyId</td>
                        <td data-title="Username">@faculty.FacultyName</td>
                        <td data-title="Coordinator">
                            @foreach (var user in ViewBag.Users)
                            {
                                if (user.FacultyId == faculty.FacultyId && user.RoleId == 3)
                                {
                                    @user.Username
                                }
                            }
                        </td>
                        <td data-title="Guest account">
                            @foreach (var user in ViewBag.Users)
                            {
                                if (user.FacultyId == faculty.FacultyId && user.RoleId == 10)
                                {
                                    @user.Username
                                }
                            }
                        </td>
                        <td data-title="Edit">
                            <a asp-area="Admin" asp-controller="Faculty" asp-action="Edit" asp-route-id="@faculty.FacultyId" class="btn edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Edit
                            </a>
                        </td>
                        <td data-title="Delete">
                            <a asp-area="Admin" asp-controller="Faculty" asp-action="Delete" asp-route-id="@faculty.FacultyId" class="btn delete" onclick="confirmation(event)">
                                <i class="fa-solid fa-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                <!-- <tr>
                    <td colspan="5" style="text-align: center;">There are no data</td>
                </tr> -->
            </tbody>
        </table>
        <!-- pagination -->
    </div>
</div>