﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/login/css/style.css" />
    <title>Sign In</title>
    @await Component.InvokeAsync("NToastNotify")
</head>

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin">
                <form asp-controller="Account" asp-action="Login" method="post" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" name="Email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" id="password" name="Password" placeholder="Password" />
                        <i class="fa-solid fa-eye-slash eye-icon" id="show-password"></i>
                    </div>
                    @if (TempData["LoginError"] != null)
                    {
                        <span class="text-danger">
                            @TempData["LoginError"]
                        </span>
                    }
                    <input type="submit" value="Login" class="btn solid" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="logo-wrapper">
                    <img src="~/login/img/logo.svg" class="logo"/>
                </div>
                <img src="~/login/img/login.svg" class="image"/>
            </div>
        </div>
    </div>
    
    <script src="~/login/js/script.js"></script>
</body>

</html>