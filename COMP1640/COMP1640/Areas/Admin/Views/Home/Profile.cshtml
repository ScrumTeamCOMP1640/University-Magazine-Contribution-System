@model COMP1640.ViewModels.ProfileViewModel

@{
	ViewData["Title"] = "Update Info";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="section__body">
	<div class="main-content">
		<form asp-area="Admin" asp-controller="Home" asp-action="UpdateInfo" method="post">
			<div class="profile">
				<div class="profile-info">
					<h1>Account Settings</h1>
					<div class="profile-image">
						<img src="~/img/@Model.Avatar" id="photo">
						<input type="file" id="img-file" asp-for="Avatar" accept="image/*"/>
						<label for="img-file" id="upload-btn"><i class="fas fa-camera"></i></label>
					</div>
					<table width="100%" class="profile-details">
						<tr>
							<td class="title"><strong>Username</strong></td>
							<td>
								<div class="profile__group">
									<input type="text" asp-for="Username" class="profile__input">
								</div>
							</td>
						</tr>

						<tr>
							<td class="title"><strong>Email</strong></td>
							<td>
								<div class="profile__group">
									<input type="email" asp-for="Email" class="profile__input">
								</div>
							</td>
						</tr>

						<tr>
							<td class="title"><strong>Old password</strong></td>
							<td>
								<div class="profile__group">
									<input type="password" asp-for="OldPassword" class="profile__input" placeholder="Enter your old password">
								</div>
							</td>
						</tr>

						<tr>
							<td class="title"><strong>New password</strong></td>
							<td>
								<div class="profile__group">
									<input type="password" asp-for="NewPassword" class="profile__input" placeholder="Enter your new password">
								</div>
							</td>
						</tr>

						<tr>
							<td class="title"><strong>Confirm password</strong></td>
							<td>
								<div class="profile__group">
									<input type="password" asp-for="ConfirmPassword" class="profile__input" placeholder="Confirm your new password">
								</div>
							</td>
						</tr>
					</table>
					<div class="profile-actions">
						<button type="submit" class="btn primary">
							Save Changes
						</button>
						<a asp-controller="Home" asp-action="Index" class="btn secondary">
							Cancel
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

<script src="~/admin/js/upload.js"></script>