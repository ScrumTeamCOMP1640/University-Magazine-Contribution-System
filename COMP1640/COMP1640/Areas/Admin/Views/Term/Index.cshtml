@{
    ViewData["Title"] = "Term List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model X.PagedList.IPagedList<COMP1640.Models.Term>

<div class="section__body">
    <h1>Terms</h1>
    <div class="main-content">
        <a asp-area="Admin" asp-controller="Term" asp-action="Add" class="btn primary">
            <i class="fa-solid fa-plus"></i>
            New
        </a>
        <table class="content-table">
            <thead>
                <tr>
                    <th>Term</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var term in Model)
                {
                    <tr>
                        <td data-title="Term">@term.TermName</td>
                        <td data-title="Start Date">@String.Format("{0:MMMM/dd/yy}", term.StartDate)</td>
                        <td data-title="End Date">@String.Format("{0:MMMM/dd/yy}", term.EndDate)</td>
                        <td data-title="Edit">
                            <a asp-area="Admin" asp-controller="Term" asp-action="Edit" asp-route-id="@term.TermId" class="btn edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Edit
                            </a>
                        </td>
                        <td data-title="Delete">
                            <a asp-area="Admin" asp-controller="Term" asp-action="Delete" asp-route-id="@term.TermId" class="btn delete" onclick="confirmation(event)">
                                <i class="fa-solid fa-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                <!-- <tr>
                    <td colspan="5" style="text-align: center;">There are no data</td>
                </tr> -->
            </tbody>
        </table>
        <!-- pagination -->
        @await Html.PartialAsync("_Pagination", Model)
    </div>
</div>
